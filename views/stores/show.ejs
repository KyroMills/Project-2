<%- include('../partials/header')%>

<h2>Shopping Cart</h2>
<%if (products.length) { %>
        <tbody>
            <% let total = 0 %>
            <% products.forEach(function(p) { %>
                <tr>
                    <th>Name:</th>
                    <td><%= p.name%></td>
                    <th>Price:</th>
                    <td><%= p.price%></td>
                    <td>
                        <% if (user && user._id.equals(p.user)) { %>
                        <a href="/products/<%= p.id %>/editReview">Edit</a>
                     
                        <% } %>
                    </td>
                    <td>
                        <form action="/products/<%= p._id %>?_method=DELETE" method="POST">
                            <button type="submit">X</button>
                          </form>
                      </td>
                </tr>
<% })  %>

<% } %>





<%- include('../partials/footer')%>